{
  "name": "@phanect/utils",
  "version": "1.0.0",
  "description": "@phanect's personal utility library for JavaScript & TypeScript",
  "author": "Jumpei Ogawa (https://phanective.org)",
  "license": "MIT",
  "type": "module",
  "main": "dist/utils.cjs",
  "exports": {
    "import": "./dist/utils.mjs",
    "require": "./dist/utils.cjs"
  },
  "scripts": {
    "build": "vite build",
    "lint": "tsc --noEmit && eslint --ext=.js,.cjs,.mjs,.jsx,.ts,.tsx .",
    "release": "npm publish --access public --non-interactive",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "eslint": "^8.56.0",
    "eslint-config-phanective": "latest",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=10.x"
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
